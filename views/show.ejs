<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">
        <%= showBlog.title %>
    </div>
    <br>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= showBlog.image %>">
            <div class="description">
                <p>
                    <br>
                    <%- showBlog.body %>
                </p>
            </div>
            <br>
            <div class="content">
                <span>
                    <%= showBlog.created.toDateString() %> </span>
            </div>
            <a class="ui orange button" href="/blogs/<%= showBlog._id %>/edit">Edit</a>
            <form id="delete" action="/blogs/<%= showBlog._id %>?_method=DELETE" method="POST">
                <button class=" ui red button">Delete</button>
            </form>
        </div>
    </div>
</div>

<% include partials/footer %>