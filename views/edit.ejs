<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit Blog</div>

    <form class="ui form" action="/blogs/<%= showBlog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value=" <%= showBlog.title %> ">
        </div>

        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value=" <%= showBlog.image %> ">
        </div>

        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" required> <%= showBlog.body %> </textarea>
        </div>

        <input class="ui green button" type="submit" required>
    </form>
</div>

<% include partials/footer %>